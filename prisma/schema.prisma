generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ride {
  id          Int      @id @default(autoincrement())
  customer_id String
  origin      String
  destination String
  distance    Float
  duration    String
  value       Float
  date        DateTime @default(now())
  driverId    Int
  driverName  String
}
